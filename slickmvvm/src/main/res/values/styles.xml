<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LoadingDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/loadingDialogColorAccent</item>
        <item name="android:textColorPrimary">@color/loadingDialogTextColorPrimary</item>
        <item name="android:background">@color/loadingDialogBackground</item>
    </style>

    <style name="TransparentBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!-- 使用 Dialog 控件外的背景不变暗 -->
    <style name="FullDialogBackgroundDialogStyle" parent="Theme.AppCompat.Dialog">
        <!-- 设置窗口是否是悬浮显示-->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否允许对话框的背景变暗。为true则充许变暗-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 提示框是否有边框-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>
</resources>